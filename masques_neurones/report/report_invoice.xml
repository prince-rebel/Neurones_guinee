<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="masques_neurones.report_invoice_document_neurone">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="address">
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="">CC: </t>: <span t-field="o.partner_id.vat"/>
                    </div>
                </t>
                <div class="page">
                    <div class="row" >
                        <div class="col-4" style="border:1px solid black; font-size:13px;">
                            <strong>
                                <t t-if="o.company_id.n_cc">
                                    <p style="margin: 0;padding: 0;">N°CC:&#032;&#032;&#032;<span t-field="o.company_id.n_cc"/></p>
                                </t>
                                <t t-if="o.company_id.n_ifu">
                                    <p style="margin: 0;padding: 0;"> N°IFU:&#032;&#032;&#032;<span t-field="o.company_id.n_ifu"/></p>
                                </t>
                                <t t-if="o.company_id.regime_imposition">
                                    <p style="margin: 0;padding: 0;">Régime d’imposition:&#032;&#032;&#032;<span t-field="o.company_id.regime_imposition"/></p>
                                </t>
                                <t t-if="o.company_id.centre_impot">
                                    <p style="margin: 0;padding: 0;">Centre des Impôts:&#032;&#032;&#032;<span t-field="o.company_id.centre_impot"/></p>
                                </t>
<!--                                <p>-->
<!--                                    N°CC : 1017834B<br/>-->
<!--                                    N°IFU : 1017834B<br/>-->
<!--                                    Régime d’imposition : Réel Normal<br/>-->
<!--                                    Centre des Impôts : CME-->
<!--                                    </p>-->
                            </strong>
                        </div>
                        <div class="col-8"></div>
                    </div>
                    <br/>
                    <h6>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                            <t t-if="o.printing_type_invoice == 'acompte'">
                                Facture d'acompte
                            </t>
                            <t t-if="o.printing_type_invoice == 'sold'">
                                Facture de solde
                            </t>
                            <t t-if="not o.printing_type_invoice or o.printing_type_invoice == 'normale'">
                                Facture
                            </t>
                        </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Facture </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Facture annulée</span>
                        <span t-if="o.move_type == 'out_refund'">Avoir</span>
                        <span t-if="o.move_type == 'in_refund'">Avoir fournisseur</span>
                        <span t-if="o.move_type == 'in_invoice'">Factures fournisseurs</span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </h6>

                    <div id="informations" class="row mt32 mb32" style="font-size:13px;">
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                            <strong>Date de facture:</strong>
                            <p class="m-0" t-field="o.invoice_date"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                            <strong>Date d'échéance:</strong>
                            <p class="m-0" t-field="o.invoice_date_due"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                            <strong>BC Client:</strong>
                            <p class="m-0" t-field="o.invoice_origin"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                            <strong>Réf. Client:</strong>
                            <p class="m-0" t-field="o.partner_id.ref"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Numéro de client:</strong>
                            <p class="m-0" t-field="o.partner_id.ref"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.ref" name="reference">
                            <strong>Référence:</strong>
                            <p class="m-0" t-field="o.ref"/>
                        </div>
                    </div>

                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table class="table table-sm o_main_table" name="invoice_line_table" style="font-size:12px;">
                        <thead>
                            <tr>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="6"/>
                                <th name="th_description" class="text-left"><span>Description</span></th>
                                <!-- TODO: remove in master -->
                                <th name="th_source" class="d-none text-left" t-if="0"><span>Document d'origine</span></th>
                                <th name="th_quantity" class="text-center"><span>Quantité</span></th>
                                <th name="th_priceunit" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Prix unitaire</span></th>
                                <th name="th_price_unit" t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.%</span>
                                    <!-- TODO: remove in master -->
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <th name="th_taxes" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                                <th name="th_subtotal" class="text-center">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Montant</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Prix Total</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                            <t t-if="o.printing_type_invoice in ('normale','exonere')">
                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                            <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                            <td class="text-center">
                                                <span t-field="line.quantity"/>
                                                <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                            </td>
                                            <td t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.price_unit"/>
                                            </td>
                                            <td t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.discount"/>
                                            </td>
                                            <td t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                            </td>
                                            <td class="text-center o_price_total">
                                                <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td colspan="99">
                                                <strong class="mr16">Sous-total</strong>
                                                <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                            <t t-if="o.printing_type_invoice not in ('normale','exonere')">
                                <t t-foreach="o.order_id.order_line" t-as="line">
                                    <t t-if="line.product_id.name != 'Down payment'">
<!--                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">-->
<!--                                            <t t-if="not line.display_type">-->
<!--                                                <td><span t-field="line.reference"/></td>-->
<!--                                                <td name="td_name"><span t-field="line.name"/></td>-->
<!--                                                <td name="td_quantity" class="text-right">-->
<!--                                                    <span t-field="line.product_uom_qty"/>-->
<!--                                                    <span t-field="line.product_uom" groups="uom.group_uom"/>-->
<!--                                                </td>-->
<!--                                                <td name="td_priceunit" class="text-right">-->
<!--                                                    <span t-field="line.price_unit"/>-->
<!--                                                </td>-->
<!--                                                <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">-->
<!--                                                    <span t-field="line.discount"/>-->
<!--                                                </td>-->
<!--                                                <td name="td_taxes" class="text-right">-->
<!--                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>-->
<!--                                                </td>-->
<!--                                                <td name="td_subtotal" class="text-right o_price_total">-->
<!--                                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>-->
<!--                                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>-->
<!--                                                </td>-->
<!--                                            </t>-->
<!--                                            <t t-if="line.display_type == 'line_section'">-->
<!--                                                <td name="td_section_line" colspan="99">-->
<!--                                                    <span t-field="line.name"/>-->
<!--                                                </td>-->
<!--                                                <t t-set="current_section" t-value="line"/>-->
<!--                                                <t t-set="current_subtotal" t-value="0"/>-->
<!--                                            </t>-->
<!--                                            <t t-if="line.display_type == 'line_note'">-->
<!--                                                <td name="td_note_line" colspan="99">-->
<!--                                                    <span t-field="line.name"/>-->
<!--                                                </td>-->
<!--                                            </t>-->
<!--                                        </tr>-->
                                        <tr>
                                            <td><span t-field="line.name"/></td>
                                            <td class="text-center">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom" groups="uom.group_uom"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                                <span t-field="line.discount"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                            </td>
                                            <td name="td_subtotal" class="text-center o_price_total">
                                                <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <t t-if="o.printing_type_invoice == 'acompte'">
<!--                        <div class="col-12 pull-right">-->
                        <table class="table table-sm" name="invoice_line_table1" style="font-size:12px;">
                            <tr>
                                <th>Total HT</th>
                                <th>TVA</th>
                                <th>Total TTC</th>
                                <th>Taux acompte</th>
                                <th>Reste à payer</th>
                                <th>Total acompte payé</th>
                                <th>Montant à payer</th>
                            </tr>
                            <tbody class="invoice_acompte_exonere">
                                <tr>
                                    <td>
                                        <span t-field="o.order_id.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td>
                                        <span t-field="o.order_id.amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td>
                                        <span t-field="o.order_id.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td>
                                        <span t-field="o.advance_payment_rate" /> %
                                    </td>
                                    <td>
                                        <span t-field="o.amount_to_paid" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td>
                                        <span t-field="o.total_accoumpte" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td>
                                        <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
<!--                        </div>-->
                    </t>

                    <t t-if="o.printing_type_invoice == 'sold'">
<!--                        <div class="col-12 pull-right">-->
                            <table class="table table-sm" name="invoice_line_table1" style="font-size:12px;">
                                <tr>
                                    <th>TOTAL HT</th>
                                    <th>TVA</th>
                                    <th>TOTAL TTC</th>
                                    <th>TOTAL ACOMPTE PERCU</th>
                                    <th>SOLDE</th>
                                </tr>
                                <tbody class="invoice_acompte_exonere">
                                    <tr>
                                        <td>
                                            <span t-field="o.order_id.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td>
                                            <span t-field="o.order_id.amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td>
                                            <span t-field="o.order_id.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td>
                                            <span t-field="o.order_id.paid_deposit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td>
                                            <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
<!--                        </div>-->
                    </t>

                    <t t-if="o.printing_type_invoice in ('exo_acompte','exo_solde')">
<!--                        <div class="col-xs-12 pull-right">-->
                            <table class="table" name="invoice_line_table1" style="font-size:12px;">
                                <tr>
                                    <th>TOTAL GENERAL HT</th>
                                    <t t-if="o.printing_type_invoice == 'exo_acompte'"><th>ACOMPTE</th></t>
                                    <th>TVA NON FACTUREE</th>
                                    <t t-if="o.printing_type_invoice == 'exo_solde'">
                                        <th>MONTANT TTC</th>
                                        <th>ACOMPTE DÉJÀ PERCU</th>
                                    </t>
                                    <th>TAUX</th>
                                    <th>
                                        <t t-if="o.printing_type_invoice == 'exo_acompte'">MONTANT TOTAL</t>
                                        <t t-if="o.printing_type_invoice == 'exo_solde'">SOLDE</t>
                                    </th>
                                </tr>
                                <tbody class="invoice_acompte_exonere">
                                    <tr>
                                        <td>
                                            <span t-field="o.order_id.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <t t-if="o.printing_type_invoice == 'exo_acompte'">
                                            <td><span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                        </t>
                                        <td>
                                            <span t-field="o.amount_tva_exone" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <t t-if="o.printing_type_invoice == 'exo_solde'">
                                            <td>
                                                <span t-field="o.order_id.amount_total" /> %
                                            </td>
                                            <td>
                                                <span t-field="o.order_id.paid_deposit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </t>
                                        <td>
                                            <span t-field="o.advance_payment_rate" />
                                        </td>
                                        <td>
                                            <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
<!--                        </div>-->
                    </t>

                    <t t-if="o.printing_type_invoice == 'exonere'">
                        <div class="col-4 pull-right">
                            <table class="table table-condensed" style="font-size:12px;">
                                <tr class="border-black">
                                    <td><strong>TOTAL HT</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>TVA Non Facturée</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tva_exone" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                         <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>

                    <div class="clearfix">
                        <t t-if="o.printing_type_invoice == 'normale'">
                            <div id="total" class="row" style="font-size:12px;">
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                    <table class="table table-sm" style="page-break-inside: avoid;">
                                        <tr class="border-black o_subtotal" style="">
                                            <td><strong>Sous-total</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.amount_untaxed"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                            <tr style="">
                                                <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                                    <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                                                    <td class="text-right o_price_total">
                                                        <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td>
                                                        <span t-esc="amount_by_group[0]"/>
                                                        <span class="text-nowrap"> sur
                                                            <t t-esc="amount_by_group[4]"/>
                                                        </span>
                                                    </td>
                                                    <td class="text-right o_price_total">
                                                        <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr class="border-black o_total">
                                            <td><strong>Total</strong></td>
                                            <td class="text-right">
                                                <span class="text-nowrap" t-field="o.amount_total"/>
                                            </td>
                                        </tr>
                                        <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                        <t t-foreach="payments_vals" t-as="payment_vals">
                                            <tr>
                                                <td>
                                                    <i class="oe_form_field text-right oe_payment_label">Payé le <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="len(payments_vals) > 0">
                                            <tr class="border-black">
                                                <td><strong>Montant dû</strong></td>
                                                <td class="text-right">
                                                     <span t-field="o.amount_residual"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </table>
                                </div>
                            </div>
                        </t>
                    </div>
                    <br/>
                    <div class="row" style="font-size:12px;">
                        <div class="col-12">
                            <strong>
                                <span>Arrèté la présente Facture à la somme de : </span>&#032;
                                <span t-field="o.amount_letter"/> &#032;&#032; francs CFA Toutes Taxes Comprises.

                            </strong>
                        </div>
                    </div>
                    <!--<p t-if="o.move_type in ('out_invoice', 'in_refund')">
                        Merci d'utiliser la communication suivante pour votre paiement : <b><span t-field="o.invoice_payment_ref"/></b>
                    </p>-->
                    <p t-if="o.narration" name="comment" style="font-size:12px;">
                        <span t-field="o.narration"/>
                    </p>
                    <p t-if="o.invoice_payment_term_id" name="payment_term" style="font-size:12px;">
                        <span t-field="o.invoice_payment_term_id.note"/>
                    </p>
                    <p t-if="o.invoice_date_due" style="font-size:12px;">
                        Payable avant le &#032;<span t-field="o.invoice_date_due"/>&#032; à l'ordre de <strong><span t-field="o.company_id"/></strong>
