<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="update_dossier_commercial_form_view">
        <field name="name">update_dossier_commercial_form</field>
        <field name="model">update.dossier_commercial</field>
        <field name="arch" type="xml">
            <form string="Mettre à jour les DCs">
                <footer>
                    <button name="update_dossier_commerciaux" type="object"
                            string="Mettre à jour" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_update_dc" model="ir.actions.act_window">
        <field name="name">Mettre à jour les DCs</field>
        <field name="res_model">update.dossier_commercial</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
