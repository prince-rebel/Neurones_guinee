<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="masques_neurones.report_purchasequotation_document_neurone">
    <div class="article">

        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
        <div class="page">
            <div class="header_custom o_background_header">
                <div class="row">
                    <div class="col-7">
                        <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)"
                             class="img-responsive img" style="margin-top:-10px; max-height: 100px; max-width: 400px; opacity: 1;"
                        />
                    </div>
                    <div class="col-1"></div>
                    <div class="col-4" style="border: 1px solid black;font-size:12px;padding-left:10px;">
                        <strong><p style="margin: 0;padding: 0;" t-field="o.company_id.partner_id"/></strong>
                        <p style="margin: 0;padding: 0;" t-if="o.company_id.street" t-field="o.company_id.street"/>
                        <p style="margin: 0;padding: 0;" t-if="o.company_id.street2" t-field="o.company_id.street2"/>
                        <p style="margin: 0;padding: 0;" t-if="o.company_id.zip" t-field="o.company_id.zip"/>
                        <t t-if="o.company_id.phone">
                            <p style="margin: 0;padding: 0;">Tél :&#032;&#032;&#032;<span t-field="o.company_id.phone"/></p>
                        </t>
                        <t t-if="o.company_id.fax">
                            <p style="margin: 0;padding: 0;">Fax : &#032;&#032;&#032;<span t-field="o.company_id.fax"/></p>
                        </t>
                    </div>
                </div>
                <div class="clearfix mb8"/>
            </div>
            <div class="row" style="width: 4%"></div>
            <div class="oe_structure"/>

            <div class="row mt32 mb32">
                <div class="col-6">
                    <strong>Adresse de livraison:</strong>
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div t-if="not o.dest_address_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                </div>
                <div class="col-5 offset-1">
                    <strong style="font-size:25px;"><span t-field="o.partner_id"/></strong>
                    <div t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address","phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                        <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                </div>
            </div>

            <h2>Demande de prix N° <span t-field="o.name"/></h2>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Description</strong></th>
                        <th class="text-center"><strong>Date prévue</strong></th>
                        <th class="text-right"><strong>Quantité</strong></th>
                    </tr>
                </thead>
<!--                <tbody>-->
<!--                    <tr t-foreach="o.order_line" t-as="order_line">-->
<!--                        <td>-->
<!--                            <span t-field="order_line.name"/>-->
<!--                        </td>-->
<!--                        <td class="text-center">-->
<!--                            <span t-field="order_line.date_planned"/>-->
<!--                        </td>-->
<!--                        <td class="text-right">-->
<!--                            <span t-field="order_line.product_qty"/>-->
<!--                            <span t-field="order_line.product_uom" groups="product.group_uom"/>-->
<!--                        </td>-->
<!--                    </tr>-->
<!--                </tbody>-->
                <tbody>
                    <t t-foreach="o.order_line" t-as="order_line">
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                            <t t-if="not order_line.display_type">
                                <td id="product">
                                    <span t-field="order_line.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="order_line.date_planned"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="order_line.product_qty"/>
                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                </td>
                            </t>
                            <t t-else="">
                                <td colspan="99" id="section">
                                    <span t-field="order_line.name"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
            <br/>
            <br/>
            <br/>
            <br/>
            <p t-field="o.notes"/>
            <br/>
            <br/>
            <div class="row">
                <div class="col-4 offset-7">
                    <strong><p><u>Signature</u></p></strong>
                </div>
            </div>
            <div class="oe_structure"/>
        </div>
    </div>
    <div class="footer o_background_footer">
        <div class="text-center" style="border-top: 1px solid black;font-size: 12px;">
            <strong>Neurones Technologies Guinée - SARL</strong> au capital de 500 000 GNF <strong> siège social : </strong> Kaloum-Manquepas, Conakry<br/>
       .Tél : +224 613 11 06 11  - Cel : +224 613 11 06 11 - RCCM N° GN TCC 2024 B16088<br/>
    	N° Comptes : <strong>BANQUE </strong> Ref : 003 Code guichet : 007 compte : 0000918889<br/>
            <ul class="list-inline">
                <li class="list-inline-item">Page:</li>
                <li class="list-inline-item"><span class="page"/></li>
                <li class="list-inline-item">/</li>
                <li class="list-inline-item"><span class="topage"/></li>
            </ul>
        </div>
    </div>
</template>

<template id="masques_neurones.report_purchasequotation">
    <t t-call="web.html_container">
        <t t-set="data_report_margin_top" t-value="15"/>
        <t t-set="data_report_margin_left" t-value="2"/>
        <t t-set="data_report_margin_rigth" t-value="2"/>
        <t t-set="data_report_header_spacing" t-value="2"/>
        <t t-set="data_report_dpi" t-value="110"/>
        <t t-foreach="docs" t-as="o">
            <t t-call="masques_neurones.report_purchasequotation_document_neurone" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>
    

