<!--                </div>-->
<!--                <div class="offset-8">-->
<!--                    <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>-->
<!--                </div>-->
<!--                <div class="offset-8 text-center">-->
<!--                    <p t-field="doc.signed_by"/>-->
<!--                </div>-->
<!--            </div>-->

<!--            <p t-field="doc.note" />-->
           <!-- <p t-if="doc.payment_term_id.note">
                <span t-field="doc.payment_term_id.note"/>
            </p>-->
<!--            <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.sudo().note">-->
<!--                <strong>Remarque sur le régime fiscal:</strong>-->
<!--                <span t-field="doc.fiscal_position_id.sudo().note"/>-->
<!--            </p>-->
            <div class="oe_structure"/>
            <br/><br/>
            <div class="row">
                <div class="col-4 offset-7">
                    <strong><p><u>Signature</u></p></strong>
                </div>
            </div>
        </div>
    </t>
</template>


<template id="masques_neurones.report_saleorder">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="masques_neurones.report_saleorder_document_neurone" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

<template id="masques_neurones.report_saleorder_pro_forma">
    <t t-call="web.html_container">
        <t t-set="is_pro_forma" t-value="True"/>
        <t t-foreach="docs" t-as="doc">
            <t t-call="masques_neurones.report_saleorder_document_neurone" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
